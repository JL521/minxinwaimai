/* pages/shopCar/shopCar.wxss */
.list-item{
  font-size: 32rpx;
  color: #333;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  align-items: center;
  padding: 6px;
}

.item-img{
  width: 50px;
  height: 50px;
  border-radius: 10px;
}
.item-info{
  flex: 1;
  margin: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-info-title{
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 10pt;
}
.item-price{
  display: flex;
}
.item-price-m{
  flex: 1;
  font-size: 12pt;
  color: rgb(221, 54, 51);
  font-weight: 500;
}
.item-price-a{
  height: 20px;
  width: 20px;
  display: flex; 
  justify-content: center;
  align-items: center; 
  background-color: rgb(204, 186, 238);
  border-radius: 20px;
  color: white;
  line-height: 20px;
  padding-bottom: 4px;
  box-sizing: border-box;
 }
 .item-num{
   margin: 0 8px;
   color: #666;
 }
 .order-num{
  font-size: 12pt;
  font-weight: 400;
 }