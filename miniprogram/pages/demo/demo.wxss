.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.shop-info{
  margin: 10px;
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  display: flex;
  box-shadow: inset 0 0 2px rgb(184, 156, 258);
}
.shop-banner{
  height: 60px;
  width: 60px;
  border-radius: 2px;
}
.shop-des{
  margin-left: 20px;
  font-size: 12pt;
  color:#333;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.shop-des-top{
  display: flex;
}
.shop-des-title{
  font-size: 14pt;
  font-weight: 400;
}
.shop-des-phone{
  margin-left: 10px;
  font-weight: 400;
  color: #333;
}
.shop-des-add{
  font-size: 10pt;
  color: #666;
}
.link {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
  height: 80%;
}
 
.left {
  width: 200rpx;
  /* 这里的高度可以写也可以不写，效果还是可以实现的，不过最好还是写上吧 */
  /* height: 100vh; */
  background-color: rgb(247, 248, 248);
  text-align: center;
  color: #444;
}
 
.left .item {
  width: 200rpx;
  font-size: 12pt;  
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 10px;
  box-sizing: border-box;
}
 
.active {
  background-color: rgb(223, 215, 240);
  color: #333;
}
 
.right {
  flex: 1;
  /* height: 100vh; */
  background-color: white;
  /* padding-bottom: 80px; */
}
 
.list-item{
  font-size: 32rpx;
  color: #333;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  align-items: center;
  padding: 6px;
}

.item-img{
  width: 80px;
  height: 80px;
  border-radius: 6px;
}
.item-info{
  height: 80px;
  flex: 1;
  margin: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-info-title{
  margin-bottom: 5px;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex: 1;
  font-size: 12pt;
}
.item-price{
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-price-m{
  font-size: 12pt;
  color: rgb(221, 54, 51);
  flex: 1;
  font-weight: 500;
}
.item-info-sale{
  font-size: 10pt;
  color: #666;
}
.item-price-a{
 height: 20px;
 width: 20px;
 display: flex; 
 justify-content: center;
 align-items: center; 
 background-color: rgb(204, 186, 238);
 border-radius: 20px;
 color: white;
 line-height: 20px;
 padding-bottom: 4px;
 box-sizing: border-box;
}
.item-num{
  margin: 0 8px;
  color: #666;
}
.shop-car{
  position: fixed;
  bottom: 0px;
  right: 10px;
  left: 250rpx;
  border-radius: 40px;
  background-color: rgb(184, 156, 258);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px;
  padding-left: 10px;
  color: white;
}
.total-money{
  flex: 1;
  padding: 0 10px;
  color: white;
  text-align: center;
}
.go-order{
  padding: 0 20px;
  background-color: rgb(105, 60, 213);
  border-bottom-right-radius: 40px;
  border-top-right-radius: 40px;
  height: 40px;
  line-height: 40px;
  color: white;
}
.safe-area{
  height: 100px;
}


