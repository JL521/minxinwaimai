
.min{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.min-info{
  margin-top: 20px;
  margin-bottom: 10px;
  text-align: center;
}
.min-img{
  width: 100px;
  height: 100px;
  border-radius: 100px;
  margin-bottom: 20px;
}

.nick-name{
  font-size: 14pt;
  color: #333;
  font-weight: 500;
}

.no-login{
  width: 100px;
  height: 100px;
  border-radius: 100px;
  margin-bottom: 20px;
  background-color: rgb(184, 156, 258);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.min-body{
  flex: 1;
  /* background-color: #f6f6f6; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  flex-wrap: wrap;
}
.min-body-item{
 height: 30vw;
 width:40vw;
 background-color: white;
 margin: 10px;
 text-align: center;
 display: flex;
 flex-direction: column;
 justify-content: center;
 align-items: center;
 justify-content: space-around;
 color: #333;
}