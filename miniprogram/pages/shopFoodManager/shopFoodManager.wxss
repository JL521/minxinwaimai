/* pages/shopFoodManager/shopFoodManager.wxss */
.shop-foot{
  padding: 20px;
  padding-bottom: 100px;
}

.food-item{
  margin-bottom: 10px;
  padding: 20px;
  background-color: white;
  border-radius: 10px;
}

.foot-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.foot-img{
  width: 80px;
  height: 80px;
  border-radius: 6px;
}
.food-info{
  flex: 1;
  height: 80px;
  padding: 0 15px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.del-food-kind{
  margin-top: 10px;
  background-color: #eee;
  padding: 10px;
  text-align: center;
  color: #333;
  border-radius: 100px;
}

.item-info-title{
  margin-bottom: 5px;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex: 1;
  font-size: 12pt;
}
.item-price-m{
  font-size: 12pt;
  color: rgb(221, 54, 51);
  flex: 1;
  font-weight: 500;
}
.item-info-sale{
  font-size: 10pt;
  color: #666;
}
.food-info-state{
  font-size: 12pt;
  font-weight: 500;
  color: rgb(105, 60, 213);
}
.ad-foot-btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background-color:  rgb(105, 60, 213);
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-weight: 500;
  z-index: 99;
}