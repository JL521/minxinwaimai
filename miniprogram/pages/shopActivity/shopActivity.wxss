/* pages/shopActivity/shopActivity.wxss */
.shop-activity{
  padding: 20px;
  padding-bottom: 100px;
}
.activity-item{
  padding: 10px;
  border-radius: 10px;
  background-color: white;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12pt;
}
.del-activity{
  margin-left: 10px;
  color: #333;
  padding: 5px 10px;
  border: #999 1px solid;
  border-radius: 50px;
  font-size: 10pt;
}

.shop-activity-btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background-color:  rgb(105, 60, 213);
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-weight: 500;
  z-index: 99;
}